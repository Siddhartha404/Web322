<!-- views/editSet.ejs -->
<link rel="stylesheet" href="../public/css/main.css">
<link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
<%- include('partials/navbar', {page: '' }) %>

<div class="container mx-auto p-4">
    <h1 class="text-2xl font-bold">Edit Set: <%= set.name %></h1>
    
    <form action="/lego/editSet" method="post" class="mt-4">
        <!-- Use the same form controls as in addSet.ejs with pre-filled values -->
        <input type="hidden" name="set_num" value="<%= set.set_num %>" />
        <div class="mb-4">
            <label for="name" class="block text-gray-700">Name</label>
            <input type="text" id="name" name="name" value="<%= set.name %>" class="form-input mt-1 block w-full" />
        </div>
        <div class="mb-4">
            <label for="year" class="block text-gray-700">Year</label>
            <input type="number" id="year" name="year" value="<%= set.year %>" class="form-input mt-1 block w-full" />
        </div>
        <div class="mb-4">
            <label for="num_parts" class="block text-gray-700">Number of Parts</label>
            <input type="number" id="num_parts" name="num_parts" value="<%= set.num_parts %>" class="form-input mt-1 block w-full" />
        </div>
        <div class="mb-4">
            <label for="theme_id" class="block text-gray-700">Theme</label>
            <select id="theme_id" name="theme_id" class="form-select mt-1 block w-full">
                <% themes.forEach(theme => { %>
                    <option <%= (set.theme_id == theme.id) ? "selected" : "" %> value="<%= theme.id %>">
                        <%= theme.name %>
                    </option>
                <% }) %>
            </select>
        </div>
        <div class="mb-4">
            <label for="img_url" class="block text-gray-700">Image URL</label>
            <input type="text" id="img_url" name="img_url" value="<%= set.img_url %>" class="form-input mt-1 block w-full" />
        </div>
        <button type="submit" class="btn btn-success">Update Set</button>
    </form>

    <form action="/lego/deleteSet/<%= set.set_num %>" method="get" class="mt-4">
        <button type="submit" class="btn btn-error">Delete Set</button>
    </form>
</div>
