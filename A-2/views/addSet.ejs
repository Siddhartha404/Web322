<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Add Set</title>
    <link rel="stylesheet" href="../public/css/main.css">
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/alpinejs@2.x.x/dist/alpine.min.js" defer></script>
</head>
<body class="bg-gray-100">
    <%- include('partials/navbar', { page: '/lego/addSet' }) %>
    <div class="container mx-auto p-4">
        <div class="text-center py-12">
            <h1 class="text-4xl font-bold mb-4">Add New LEGO Set</h1>
        </div>
        <form action="/lego/addSet" method="POST" class="max-w-md mx-auto bg-white p-6 rounded-md shadow-md">
            <div class="mb-4">
                <label for="name" class="block text-gray-700">Name</label>
                <input type="text" id="name" name="name" class="form-input mt-1 block w-full" required>
            </div>
            <div class="mb-4">
                <label for="year" class="block text-gray-700">Year</label>
                <input type="number" id="year" name="year" class="form-input mt-1 block w-full" required>
            </div>
            <div class="mb-4">
                <label for="num_parts" class="block text-gray-700">Number of Parts</label>
                <input type="number" id="num_parts" name="num_parts" class="form-input mt-1 block w-full" required>
            </div>
            <div class="mb-4">
                <label for="img_url" class="block text-gray-700">Image URL</label>
                <input type="url" id="img_url" name="img_url" class="form-input mt-1 block w-full" required>
            </div>
            <div class="mb-4">
                <label for="theme_id" class="block text-gray-700">Theme</label>
                <select id="theme_id" name="theme_id" class="form-select mt-1 block w-full" required>
                    <% themes.forEach(theme => { %>
                        <option value="<%= theme.id %>"><%= theme.name %></option>
                    <% }) %>
                </select>
            </div>
            <div class="mb-4">
                <label for="set_num" class="block text-gray-700">Set Number</label>
                <input type="text" id="set_num" name="set_num" class="form-input mt-1 block w-full" required>
            </div>
            <button type="submit" class="bg-blue-500 text-white py-2 px-4 rounded-md shadow-md hover:bg-blue-600 transition duration-200">Add Set</button>
        </form>
    </div>
</body>
</html>
